{
  "version": "0.2.0",
  "configurations": [
    // Next.js: Neo4j, GraphQL, and Next.js - https://neo4j.com/docs/graphql-manual/current/guides/frameworks/nextjs/
    {
      "name": "Neo4j, GraphQL, and Next.js: debug full stack",
      "type": "node-terminal",
      "request": "launch",
      "command": "npm run dev",
      "cwd": "${workspaceFolder}/__reference__/neo4j-graphql-nextjs",
      "console": "integratedTerminal",
      "serverReadyAction": {
        "pattern": "started server on .+, url: (https?://.+)",
        "uriFormat": "%s",
        "action": "debugWithChrome"
      },
    },

