{
  "version": "0.2.0",
  "configurations": [
    // Source - https://nextjs.org/docs/advanced-features/debugging
    {
      "name": "Next.js: debug client-side",
      "type": "pwa-chrome",
      "request": "launch",
      "url": "http://localhost:3000"
    },

    // Next.js: Getting Started - https://nextjs.org/docs
    {
      "name": "Next.js Blog: debug full stack",
      "type": "node-terminal",
      "request": "launch",
      "command": "cd __reference__/nextjs-blog && npm run dev",
      "console": "integratedTerminal",
      "serverReadyAction": {
        "pattern": "started server on .+, url: (https?://.+)",
        "uriFormat": "%s",
        "action": "debugWithChrome"
      }
    },
    {
      "name": "Next.js Blog: debug server-side",
      "type": "node-terminal",
      "request": "launch",
      "command": "cd __reference__/nextjs-blog && npm run dev"
    },

    // Next.js example with Neo4j - https://github.com/vercel/next.js/tree/canary/examples/with-neo4j
    {
      "name": "Next.js with Neo4j: debug full stack",
      "type": "node-terminal",
      "request": "launch",
      "command": "cd __reference__/with-neo4j-app && npm run dev",
      "console": "integratedTerminal",
      "serverReadyAction": {
        "pattern": "started server on .+, url: (https?://.+)",
        "uriFormat": "%s",
        "action": "debugWithChrome"
      }
    },
    {
      "name": "Next.js with Neo4j: debug server-side",
      "type": "node-terminal",
      "request": "launch",
      "command": "cd __reference__/with-neo4j-app && npm run dev"
    },

    // Next.js example with Apollo, Neo4j, and GraphQL - https://github.com/vercel/next.js/tree/canary/examples/with-apollo-neo4j-graphql
    {
      "name": "Next.js with Apollo, Neo4j, and GraphQL: debug full stack",
      "type": "node-terminal",
      "request": "launch",
      "command": "cd __reference__/with-apollo-neo4j-graphql-app && npm run dev",
      "console": "integratedTerminal",
      "serverReadyAction": {
        "pattern": "started server on .+, url: (https?://.+)",
        "uriFormat": "%s",
        "action": "debugWithChrome"
      }
    },
    {
      "name": "Next.js with Apollo, Neo4j, and GraphQL: debug server-side",
      "type": "node-terminal",
      "request": "launch",
      "command": "cd __reference__/with-apollo-neo4j-graphql-app && npm run dev"
    },
  ]
}